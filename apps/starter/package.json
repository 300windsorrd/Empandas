{
  "name": "tfe-starter",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p ${PORT:-3000}",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --exclude e2e/**",
    "audit": "tsx ../../scripts/audit-data.ts && tsx ../../scripts/audit-brand-colors.ts",
    "seed": "tsx ./scripts/seed.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma db push",
    "db:reset": "prisma migrate reset --force && pnpm seed"
  },
  "dependencies": {
    "next": "14.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zod": "^3.22.4",
    "lucide-react": "^0.372.0",
    "framer-motion": "^11.0.0",
    "sharp": "^0.32.6",
    "these-freakin-empanadas": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.1",
    "@axe-core/playwright": "^4.9.1",
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.2",
    "vitest": "^1.5.0"
  }
}
